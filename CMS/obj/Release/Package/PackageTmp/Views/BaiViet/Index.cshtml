@model CMS.Models.Post
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 chiTietSP" ng-controller="postController">
    <input type="hidden" value="@Model.idPost" id="idPost" />
    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 chiTiet">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 right">
            <p class="tieuDe">{{post.title}}</p>
        </div>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 noiDung" ng-bind-html="post.content"></div>
    </div>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 spCungLoai">
        <p class="tieuDe">BÀI VIẾT KHÁC</p>
        <p ng-show="relatedPosts.lenght > 0" style="font-size: 1.5em; color: #f44336; padding: 3em;">Không có bài viết cùng chuyên mục</p>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 item" dir-paginate="(index, value) in relatedPosts | itemsPerPage:3" ng-hide="relatedPosts.lenght > 0" style="padding:1em 3em;">
            <img ng-src="{{value.image}}" class="col-lg-4 col-md-4 col-sm-4 col-xs-4 img-responsive" alt="{{value.title}}" />
            <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="col-lg-12 col-md-12 col-sm-12 col-xs-8 tieuDe" style="font-size:1em;">{{value.title}}</a>
        </div>
    </div>
</div>

@Html.Partial("_SPmoi")