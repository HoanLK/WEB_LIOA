<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 spMoi" ng-controller="newProductController">
    <p class="tieuDe">SẢN PHẨM MỚI</p>
    <!-- Controls -->
    <div class="col-lg-13 col-md-12 col-sm-12 col-xs-12 controls pull-right">
        <a class="right fa fa-chevron-right btn btn-default prevNext pull-right" href="#carousel-example" data-slide="next"></a>
        <a class="left fa fa-chevron-left btn btn-default prevNext pull-right" href="#carousel-example" data-slide="prev"></a>
    </div>
    <div id="carousel-example" class="col-lg-12 col-md-12 col-sm-12 col-xs-12 carousel slide" data-ride="carousel">
        <!-- Wrapper for slides -->
        <span us-spinner="{radius:15, width:4, length: 8}"></span>
        <div class="carousel-inner">
            <div class="item active">
                <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12 sp" ng-repeat="(index, value) in spMoi" ng-class="{ 'hidden-sm' : index > 3 }">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 khung ">
                        <img ng-src="{{value.image}}" class="img-responsive" alt="{{value.title}}" />
                        <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="tieuDe">{{value.title}}</a>
                        @*<p class="moTa" ng-bind-html="value.description | limitTo:100"></p>*@
                        <p class="gia" ng-show="value.price != null"><span>Giá: </span>{{value.price | number:0}} đ</p>
                        <p class="gia" ng-hide="value.price != null"><span>Giá: </span>Liên hệ</p>
                        <button class="btnDatHang">Đặt hàng</button>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="col-lg-2 col-md-2 col-sm-3 col-xs-12 sp" ng-repeat="(index, value) in spMoi" ng-class="{ 'hidden-sm' : index > 3 }">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 khung ">
                        <img ng-src="{{value.image}}" class="img-responsive" alt="{{value.title}}" />
                        <a href="/san-pham/{{value.alias}}-{{value.idProduct}}" class="tieuDe">{{value.title}}</a>
                        @*<p class="moTa" ng-bind-html="value.description | limitTo:100"></p>*@
                        <p class="gia" ng-show="value.price != null"><span>Giá: </span>{{value.price | number:0}} đ</p>
                        <p class="gia" ng-hide="value.price != null"><span>Giá: </span>Liên hệ</p>
                        <button class="btnDatHang">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
