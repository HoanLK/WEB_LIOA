@*@model CMS.Models.Product*@
@{
    ViewBag.Title = "Danh mục sản phẩm";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 bannerSanPham">
    <img src="~/Content/Front/images/Banner San Pham.png" class="img-responsive" />
</div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 danhMucSP" ng-controller="categoryProductController">
    <input type="hidden" value="1" id="idCategoryProduct"/>
    <p class="tieuDe">DANH MỤC SẢN PHẨM</p>
    <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12 danhMuc" ng-repeat="(index, value) in categoryProducts">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 khung">
            <img ng-src="{{value.image}}" class="img-responsive" alt="{{value.title}}" />
            <a href="/danh-muc-san-pham/{{value.alias}}-{{value.idCategory}}" class="tieuDe">{{value.title}}</a>
            <p class="moTa" ng-bind-html="value.description | limitTo:100"></p>
        </div>
    </div>
</div>

@Html.Partial("_SPmoi")

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 tinNoiBat" ng-controller="categoryPostController">
    <p class="tieuDe">TIN TỨC NỔI BẬT</p>
    <div class="col-lg-10 col-md-10 col-sm-12 col-xs-12 tin">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 item" ng-repeat="(index, value) in tinNoiBats">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 khung">
                <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 left pull-left">
                    <img ng-src="{{value.image}}" class="img-responsive" alt="{{value.title}}" />
                </div>
                <div class="col-lg-8 col-md-8 col-sm-8 col-xs-8 right pull-right">
                    <a href="/bai-viet/{{value.alias}}-{{value.idPost}}" class="tieuDe">{{value.title}}</a>
                    <p class="moTa" ng-bind-html="value.description | limitTo:150"></p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-12 hidden-sm tuVan">
        <img src="~/Content/Front/images/TuVan.png" class="img-responsive" />
    </div>
</div>